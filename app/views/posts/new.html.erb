<h3>New Post</h3>
<%= form_for @post do |f| %>

  <div>
    <%= f.label :image, "Upload Image:"%>
    <%= f.file_field :image %>
  </div>
  <br>
  <div>
      <h3>Add Tags</h3>
      <h4>Choose a Type</h4>
      <%= f.fields_for :posts_tags do |builder| %>

        <%= builder.collection_select(:tag_id, Tag.all, :id, :name, prompt: "Select a Tag") %>

      <% end %>
  </div>


  <br><br>


  <%= f.submit "Upload Post" %>
<% end %>
